{
  "name": "@vk/health",
  "version": "1.0.0",
  "files": [
    "dist"
  ],
  "private": true,
  "type": "module",
  "description": "Centralized health check server for Node.js services",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/express": "^5.0.6",
    "@vk/config": "workspace:*",
    "@vk/logger": "workspace:*",
    "@vk/utils": "workspace:*",
    "express": "^5.2.1",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "tsup": "^8.2.3"
  },
  "imports": {
    "#*": {
      "development": "./src/*.ts",
      "default": "./dist/*.js"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "test": "./src/index.ts",
      "development": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
