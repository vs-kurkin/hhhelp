{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "#*": [
        "*.ts"
      ],
      "@vk/logger": [
        "../../logger/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "references": [
    {
      "path": "../logger"
    }
  ]
}
